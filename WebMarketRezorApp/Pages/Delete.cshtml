@page
@model WebMarketRezorApp.Pages.DeleteModel
@{
    <div class="row">
        <!--Show card-->
        <a asp-page="/Profile" asp-route-id="@Model.Element.ID">
            <div class="col-xl-4">
                <div class="card">
                    <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
                        <img src="~/AdminTheme/assets/img/profile-img.jpg" alt="Profile" class="rounded-circle">
                        <h2>@Model.Element.Text</h2>
                        <h3>@Model.Element.FileAddress</h3>
                        <div class="social-links mt-2">
                            <button type="submit" class="btn btn-danger">Remove my profile<i class="bi bi-trash"></i></button>                            
                        </div>
                    </div>
                </div>
            </div>
        </a>
        <!--End Show Card-->
    </div>
}
